{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Prettier Format Active File",
      "type": "shell",
      "command": "node",
      "args": [
        "./node_modules/prettier/bin-prettier.js",
        "--write",
        "--config",
        "./.prettierrc",
        "${file}"
